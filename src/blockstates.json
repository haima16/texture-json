{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/haima16/texture-json/master/src/blockstate.json",
    "type": "object",
    "oneOf": [
        {
            "properties": {
                "variants": {
                    "type": "object",
                    "description": "设置变种与对应的模型，列出此方块的所有变种",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^[A-Za-z0-9_]+=[A-Za-z0-9_]+$": {
                            "$ref": "#/definitions/modelprops"
                        }
                    }
                }
            },
            "required": ["variants"]
        },
        {
            "properties": {
                "multipart": {
                    "type": "array",
                    "description": "取代variants，基于方块状态属性以来组合模型",
                    "items": {
                        "type": "object",
                        "required": ["apply"],
                        "additionalProperties": false,
                        "properties": {
                            "when": {
                                "type": "object",
                                "description": "列出该使用模型的必须满足的情况。当未设置时，总是使用该模型",
                                "properties": {
                                    "OR": {
                                        "description": "如果该标签包含的任意一个条件返回为true时匹配。不能同时设定其他单独的情况",
                                        "type": "array",
                                        "minItems": 1,
                                        "items": {
                                            "type": "object",
                                            "minProperties": 1,
                                            "maxProperties": 1,
                                            "description": "方块状态。一个键值对只能规定一个方块状态。但方块状态可以有多个值，由|来分隔，使得不同状态均可以匹配"
                                        }
                                    }
                                },
                                "additionalProperties": {
                                    "type": "string",
                                    "description": "方块状态名称。只能规定一个方块状态。但方块状态可以有多个值，由|来分隔，使得不同状态均可以匹配。不能和OR标签同时出现"
                                }
                            },
                            "apply": {
                                "description": "指定使用的模型及其属性。可以拥有单个模型或者模型的列表。如果使用列表，列表内使用不同的标签指定不同模型，游戏渲染时将会在列表内随机选择一个模型",
                                "$ref": "#/definitions/modelprops"
                            }
                        }
                    }
                }
            },
            "required": ["multipart"]
        }
    ],
    "definitions": {
        "face": {
            "type": "string",
            "enum": [
                "east",
                "south",
                "west",
                "north",
                "side"
            ]
        },
        "degree": {
            "type": "number",
            "enum": [0, 90, 180, 270]
        },
        "model": {
            "type": "object",
            "required": ["model"],
            "additionalProperties": false,
            "minItems": 1,
            "properties": {
                "model": {
                    "type": "string",
                    "description": "指定模型文件的路径，格式为命名空间ID"
                },
                "x": {
                    "$ref": "#/definitions/degree",
                    "description": "模型相对于x轴的旋转，增量90度。"
                },
                "y": {
                    "$ref": "#/definitions/degree",
                    "description": "模型相对于y轴的旋转，增量90度。"
                },
                "uvlock": {
                    "type": "boolean",
                    "description": "可为true或false（默认）。设置为true将锁定方块材质的旋转方向。这样在使用上面的 x和 y标签时材质将不会跟着方块一起旋转。"
                }
            }
        },
        "model+weight": {
            "type": "object",
            "required": ["model"],
            "additionalProperties": false,
            "minItems": 1,
            "properties": {
                "model": {
                    "type": "string",
                    "description": "指定模型文件的路径，格式为命名空间ID"
                },
                "x": {
                    "$ref": "#/definitions/degree",
                    "description": "模型相对于x轴的旋转，增量90度。"
                },
                "y": {
                    "$ref": "#/definitions/degree",
                    "description": "模型相对于y轴的旋转，增量90度。"
                },
                "uvlock": {
                    "type": "boolean",
                    "description": "可为true或false（默认）。设置为true将锁定方块材质的旋转方向。这样在使用上面的 x和 y标签时材质将不会跟着方块一起旋转。"
                },
                "weight": {
                    "type": "integer",
                    "default": 1,
                    "description": "设置模型在游戏中被选用的几率，默认为1（100%）。如果多于一个模型被用在同一个变种，每个模型被选中的几率将会为此模型的weight值除以所有模型weight的总和。"
                }
            }
        },
        "modelprops": {
            "oneOf": [
                {
                    "$ref": "#/definitions/model"
                },
                {
                    "type": "array",
                    "description": "键名为由逗号分隔的方块状态。使用不同的标签指定不同模型，游戏渲染时将会在列表内随机选择一个模型",
                    "items": {
                        "$ref": "#/definitions/model+weight"
                    }
                }
            ]
        }
    }
}